extends layout

block content
    .content
        h1.title New Message
        if(currentUser !== undefined)

            form.message-form(action="" method="POST")
                div.form-group
                    label(for="message") Message:
                    textarea#message(name="message" placeholder="what's on your mind?")
                div.form-group
                    button.btn(type="submit") Send message
        else
            p Please login before trying to send a message, if you are currently logged in please refresh.